rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if the user is the owner of a document by UID
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Helper function to get user role data from the 'teachers' collection
    function isTeacher() {
      return exists(/databases/$(database)/documents/teachers/$(request.auth.uid));
    }
     
    // Students Collection
    // - Anyone can read a student doc (to check for student_id on registration).
    // - Only the student themselves can update their doc (to add their UID on registration).
    // - No one can create or delete student records directly (they are pre-seeded).
    match /students/{studentId} {
      allow read: if true;
      allow update: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      allow create, delete: if false;
    }
    
    // Teachers Collection
    // - Only authenticated users can read teacher data.
    // - No one can write to the teachers collection (they are pre-seeded).
    match /teachers/{teacherId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
    
    // Materials Collection
    // - Any authenticated user (student or teacher) can read materials.
    // - Only authenticated teachers can create, update, or delete materials.
    match /materials/{materialId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isTeacher();
    }
    
    // Questions Collection
    // - Students can create questions for themselves.
    // - Only the student who asked the question or any teacher can read it.
    // - Teachers can update questions (e.g., to add an AI-generated answer).
    match /questions/{questionId} {
      allow create: if isAuthenticated() && request.resource.data.studentDocId != null;
      allow read: if isAuthenticated() && (isOwner(get(/databases/$(database)/documents/students/$(resource.data.studentDocId)).data.uid) || isTeacher());
      allow update: if isAuthenticated() && isTeacher();
      allow delete: if false;
    }
  }
}
